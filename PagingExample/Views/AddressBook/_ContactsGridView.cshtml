@using DevExpress.Web
@using DevExpress.XtraGrid
@model GridViewModel


@Html.DevExpress().GridView(settings =>
{
    settings.Name = "contactsGridView";
    settings.KeyFieldName = "Code";
    settings.CallbackRouteValues = new {Controller = Constants.ADDRESS_BOOK, Action = "Index"};
    settings.CustomBindingRouteValuesCollection.Add(
        GridViewOperationType.Paging, new {Controller = Constants.ADDRESS_BOOK, Action = "GetPageResult"});
    settings.CustomBindingRouteValuesCollection.Add(
        GridViewOperationType.Filtering, new {Controller = Constants.ADDRESS_BOOK, Action = "GetFilterResult"});
    settings.CustomBindingRouteValuesCollection.Add(
        GridViewOperationType.Sorting, new {Controller = Constants.ADDRESS_BOOK, Action = "GetSortResult"});
    
    settings.KeyboardSupport = true;
    settings.AccessKey = "G";
    settings.Settings.ShowFilterRow = true;
    settings.Settings.ShowFilterRowMenu = true;
    settings.Settings.ShowFilterBar = GridViewStatusBarMode.Visible;
    settings.SettingsBehavior.AllowGroup = false;
    settings.SettingsBehavior.AllowSort = true;
    settings.SettingsBehavior.SortMode = ColumnSortMode.Default;
    
    settings.Settings.VerticalScrollBarMode = ScrollBarMode.Visible;
    settings.Settings.VerticalScrollableHeight = 400;
    settings.Settings.HorizontalScrollBarMode = ScrollBarMode.Auto; 
    settings.Width = Unit.Percentage(100);
    settings.Height = 300;
    
    settings.Columns.Add("Code");
    settings.Columns.Add("FirstName", "First name");
    settings.Columns.Add("LastName", "Last name");
    settings.Columns.Add("Company");
}).BindToCustomData(Model).GetHtml()